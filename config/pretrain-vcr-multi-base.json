{

    "train_txt_dbs": ["vcr_data/txt_db_pg/vcr_train.db"],
    "train_img_dbs": ["vcr_data/img_db/vcr_gt_train;vcr_data/img_db/vcr_train"],
    "val_txt_db": "vcr_data/txt_db_pg/vcr_val.db",
    "val_img_db": "vcr_data/img_db/vcr_gt_val;vcr_data/img_db/vcr_val",
    "checkpoint": "vcr_data/pretrained/villa-base-vcr-2nd-stage.pt",
    "checkpoint_from": "vcr_pretrain",
    "model_config": "/src/config/uniter-pg-base.json",
    "output_dir": "/storage/vcr/default",
    "max_txt_len": 220,
    "conf_th": 0.2,
    "max_bb": 100,
    "min_bb": 10,
    "num_bb": 36,
    "train_batch_size": 4000,
    "val_batch_size": 10,
    "gradient_accumulation_steps": 20,
    "learning_rate": 6e-05,
    "valid_steps": 1000,
    "num_train_steps": 8000,
    "lr_mul": 1.0,
    "optim": "adamw",
    "betas": [
        0.9,
        0.98
    ],
    "patience":5,
    "dropout": 0.1,
    "weight_decay": 0.01,
    "grad_norm": 2.0,
    "warmup_steps": 800,
    "seed": 24680,
    "fp16": true,
    "n_workers": 4,
    "pin_mem": true,
    "adv_training": false,
    "adv_modality": [
        "image",
        "text"
    ],
    "adv_lr_txt": 0.01,
    "adv_lr_img": 0.01,
    "adv_steps": 3,
    "norm_type": "l2",
    "adv_max_norm": 0,
   "adv_kl_weight": 1.5,
   "retain_grad":true,
   "multi_tasks":{
	   "tasks":["vcr","itm",  "mlm"],
	   "mix_ratio":[1,1,  1]
   }}
